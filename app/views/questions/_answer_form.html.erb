<h3>Your Answer</h3>
<% if signed_in? %>
  <%= form_for [@question, @answer] do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content, :size => '50x5' %>
    </div>
    <div class="actions">
      <%= f.submit "Post Your Answer" %>
    </div>
  <% end %>
<% else %>
  <p>Please <%= link_to "sign in", signin_path %> to post your answer.</p>
<% end %>
