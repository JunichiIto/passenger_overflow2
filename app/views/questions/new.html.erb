<h2>Ask Question</h2>
<%= form_for(@question) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, :size => 69 %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :size => '50x5' %>
  </div>
  <div class="actions">
    <%= f.submit "Post Your Question" %>
  </div>
<% end %>
