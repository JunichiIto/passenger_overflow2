- message = @vote.errors.full_messages.join ","
- css_class = @vote.errors.any? ? "error" : ""
:plain
  $('votelink#{@vote.answer.id}').update('#{escape_javascript content_tag(:span, message, class: css_class)}')
  $('votecnt#{@vote.answer.id}').update('#{escape_javascript render("questions/vote_count", answer: @vote.answer)}')
