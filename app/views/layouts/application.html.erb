<!DOCTYPE html>
<html>
<head>
  <title>Passenger Overflow</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
</head>
<body>
<header>
  <h1><%= link_to "Passenger Overflow", root_path %></h1>
  <% if signed_in? %>
    <p>
      Current User:
      <%= link_to current_user.user_name, current_user %>
      <%= current_user.reputation_point %>
    </p>
  <% end %>
  <nav class="round">
    <ul>
      <li><%= link_to "Ask Question", new_question_path %></li>
      <li><%= link_to "Users", users_path %></li>
      <% if signed_in? %>
        <li><%= link_to "Profile", current_user %></li>
      <% end %>
      <% if signed_in? %>
        <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
      <% else %>
        <li><%= link_to "Sign in", signin_path %></li>
      <% end %>
    </ul>
  </nav>
</header>
<section class="round">
  <% flash.each do |key, value| %>
    <p class="flash <%= key %>"><%= value %></p>
  <% end %>
</section>
<div id="main">
  <%= yield %>
</div>
</body>
</html>
